<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relative_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Bangladesh"
            android:visibility="visible" />

        <TextView
            android:id="@+id/countrylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ranklabel"
            android:text="Country Name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/populationlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countrylabel"
            android:text="whatever"
            android:visibility="gone" />

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ranklabel"
            android:layout_toRightOf="@+id/populationlabel"
            android:gravity="center_horizontal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ranklabel"
            android:layout_alignStart="@+id/ranklabel"
            android:layout_below="@+id/rank"
            android:padding="1dp"
            android:src="@drawable/coins"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewDownTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ranklabel"
            android:layout_alignRight="@+id/ranklabel"
            android:layout_below="@+id/ranklabel"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Android Developers"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>